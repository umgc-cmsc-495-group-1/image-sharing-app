{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "hosting": {
        "public": "build",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "storage": {
        "rules": "storage.rules"
    },
    "emulators": {
        "auth": {
            "host": "127.0.0.1",
            "port": 9099
        },
        "firestore": {
            "host": "127.0.0.1",
            "port": 8080
        },
        "hosting": {
            "host": "127.0.0.1",
            "port": 5001
        },
        "pubsub": {
            "host": "127.0.0.1",
            "port": 8085
        },
        "storage": {
            "host": "127.0.0.1",
            "port": 9199
        },
        "ui": {
            "enabled": true
        }
    },
    "remoteconfig": {
        "template": "remoteconfig.template.json"
    }
}
